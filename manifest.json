{
  "manifest_version": 3,
  "name": "Amazon Address Protection",
  "version": "1.0.0",
  "description": "Hides the Amazon shipping address until toggled via popup.",
  "permissions": ["activeTab", "storage", "scripting"],
  "content_scripts": [
    {
      "matches": [
        "*://www.amazon.co.jp/*",
        "*://www.amazon.com/*",
        "*://www.amazon.co.uk/*",
        "*://www.amazon.de/*",
        "*://www.amazon.fr/*",
        "*://www.amazon.it/*",
        "*://www.amazon.es/*",
        "*://www.amazon.ca/*",
        "*://www.amazon.cn/*",
        "*://www.amazon.in/*",
        "*://www.amazon.com.mx/*",
        "*://www.amazon.com.au/*",
        "*://www.amazon.com.br/*",
        "*://www.amazon.nl/*",
        "*://www.amazon.com.tr/*",
        "*://www.amazon.sg/*",
        "*://www.amazon.ae/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
